<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#fff"></ImageView>

                <TextView
                    android:id="@+id/txt_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="x"
                    android:textColor="#fff"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="X"
                    android:textColor="#fff"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_sendMail"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:adjustViewBounds="false"
                        android:background="#fff"
                        android:cropToPadding="false"
                        android:scaleType="center"
                        android:src="@drawable/gmail"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_notepad"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/document"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_sensorList"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/openmenu"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_alarm"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/alert"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_motion"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/motion"></ImageButton>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton

                        android:id="@+id/btn_userList"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:background="#fff"
                        android:src="@drawable/list"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_settings"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/support"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_sensorTest"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/technology"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_rdmProgress"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/download"></ImageButton>

                    <ImageButton

                        android:id="@+id/btn_sndLocation"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:src="@drawable/location"></ImageButton>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
