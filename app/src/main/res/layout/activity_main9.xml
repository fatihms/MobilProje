<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main9Activity"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AYARLAR"
            android:textSize="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı: "></TextView>

        <EditText
            android:id="@+id/et_userNameSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinsiyetiniz: "></TextView>

        <RadioButton
            android:id="@+id/rb_maleSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erkek"></RadioButton>

        <RadioButton
            android:id="@+id/rb_femaleSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kadın"></RadioButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boy: "></TextView>

        <EditText
            android:id="@+id/et_sizeSetting"
            android:layout_width="50dp"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kilo: "></TextView>

        <EditText
            android:id="@+id/et_kiloSetting"
            android:layout_width="50dp"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kilo: "></TextView>

        <EditText
            android:id="@+id/et_ageSetting"
            android:layout_width="50dp"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mod: "></TextView>

        <RadioButton
            android:id="@+id/rb_darkSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark"></RadioButton>

        <RadioButton
            android:id="@+id/rb_lightSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light"></RadioButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <Button
            android:id="@+id/btn_updateSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Güncelle"></Button>
        <Button
            android:id="@+id/btn_readSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Göster"></Button>
    </LinearLayout>

</LinearLayout>
</LinearLayout>